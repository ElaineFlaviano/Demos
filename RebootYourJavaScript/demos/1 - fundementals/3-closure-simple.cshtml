
@section scripts {
    <script type="text/javascript">
        $(document).ready( function () {
            
            var a = "a";
            
            ( function () {
                var b = "b";
        
                ( function () {
                    var c = "c";
                    
                    ( function () {
                        write("a: " + a);    
                        write("b: " + b);
                        write("c: " + c);
                    } ) ();
                    
                })();
                
            })();
            
        });
    </script>
}














